<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Savings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:text="Savings"
        android:textColor="@color/black" />

    <FrameLayout
        android:id="@+id/SavingsView"
        android:layout_width="363dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient_drawable_round_corner">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TransactionNameInputLayout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="70dp"
            android:hint="Transaction Name"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/TransactionNameInput"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:hint="Transaction Name"
                android:textColor="@android:color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/AmountInputLayout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="130dp"
            android:hint="Amount"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/AmountInput"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:hint="Amount"
                android:textColor="@android:color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/NotesInputLayout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="190dp"
            android:hint="Notes"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/NotesInput"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:hint="Notes"
                android:textColor="@android:color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/DateInputLayout"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="250dp"
            android:layout_marginRight="90dp"
            android:hint="Date"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/DateInput"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:hint="Date"
                android:textColor="@android:color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TimeInputLayout"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="90dp"
            android:hint="Time"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/TimeInput"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:hint="Time"
                android:textColor="@android:color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/IncomeButton"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="INCOME"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:background="#90EE90"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/ExpenseButton"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="EXPENSE"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="20dp"
            android:background="#FF0000"
            android:textColor="@android:color/black" />

    </FrameLayout>

</FrameLayout>
