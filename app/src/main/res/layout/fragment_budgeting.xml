<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Budgeting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/TotalBalanceView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/frame_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-190dp"
        android:layout_marginBottom="16dp"
        android:text="TOTAL BALANCE: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/amounttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="16dp"
        android:text="PHP 0.00"
        android:textColor="@color/black"
        android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:text="OVERALL RECORDS:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="16dp"
            android:text="INCOME:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amountgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="16dp"
            android:text="PHP 0.00"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-70dp"
            android:layout_marginBottom="56dp"
            android:text="EXPENSES:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/amountred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-55dp"
            android:layout_marginBottom="16dp"
            android:text="PHP 0.00"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/BillsView"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="40dp"
            android:background="@drawable/peach_gradient" />

        <TextView
            android:id="@+id/Bills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-265dp"
            android:layout_marginBottom="16dp"
            android:text="BILLS"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/addbillbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:layout_marginTop="-45dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/baseline_add_box_24" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/billrecycler"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginHorizontal="30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/bluegreen_gradient" />

        <TextView
            android:id="@+id/Subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-260dp"
            android:layout_marginBottom="16dp"
            android:text="SUBSCRIPTIONS"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/addsubbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:layout_marginTop="-45dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/baseline_add_box_24" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subrecycler"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            tools:listitem="@layout/subs_list"
            android:layout_marginHorizontal="30dp"/>

    </LinearLayout>


    </ScrollView>

</FrameLayout>

